<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="101dip"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3" >

            <Button
                android:id="@+id/btn_all_check"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:text="@string/all_check" />

            <Button
                android:id="@+id/btn_all_uncheck"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:text="@string/all_uncheck" />

            <Button
                android:id="@+id/btn_check_confirmation"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:text="@string/checked_confirmation" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#50000000" />

        <TextView
            android:id="@+id/result"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="@string/test_ellipsis"
            android:textColor="#000000"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#50000000" />
    </LinearLayout>

    <ListView
        android:id="@+id/main_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>